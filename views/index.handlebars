<div class="container">
  <div class="row text-center">
      <h1>EAT DA BURGER</h1>
  </div>
  <div class="row">
    <p>ENTER A BURGER YOU WOULD LIKE TO EAT</p>
    <form action="/burgers/create" method="POST">
      <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
      <button type="submit" class="btn btn-default" id="whatever">SUBMIT</button>
    </form>
    
  </div>

  <div class="row">
    <ul>
      {{#each burger}}
        {{#unless devoured}}
        <li>{{id}}. {{burger_name}}</li>
        <form action="/burgers/update?_method=PUT" method="POST">
          <input type="hidden" name="burger_id" value={{id}}></input>
          <br>
          <button type="submit" class="btn btn-default">DEVOUR IT</button>
        </form>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="row">
    <h1>Devoured Burgers</h1>
    <ul>
      {{#each burger}}
        {{#if devoured}}
          <li>{{id}}. {{burger_name}}</li>
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>
